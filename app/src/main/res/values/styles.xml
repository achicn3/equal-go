<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColor">@color/colorGreen</item>
    </style>


    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="ripplebutton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="colorControlHighlight">@color/dsb_ripple_color_list</item>
    </style>

    <style name="navigationIcon" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="paddingEnd">16dp</item>
        <item name="paddingStart">8dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#00a89b</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
