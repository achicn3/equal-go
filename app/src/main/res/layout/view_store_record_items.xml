<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_storeRecord_userAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_profile_default_avatar"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/tv_storeRecord_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:textColor="@color/colorDarkBlue"
                tools:text="使用者名稱"
                app:layout_constraintStart_toEndOf="@+id/iv_storeRecord_userAvatar"
                app:layout_constraintTop_toTopOf="@+id/iv_storeRecord_userAvatar" />

            <TextView
                android:id="@+id/tv_storeRecord_userPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                tools:text="0912345678"
                android:textStyle="italic|bold"
                app:layout_constraintBottom_toBottomOf="@+id/iv_storeRecord_userAvatar"
                app:layout_constraintStart_toEndOf="@+id/iv_storeRecord_userAvatar" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>