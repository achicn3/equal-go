<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore = "VectorDrawableCompat,RtlHardcoded,ContentDescription,RtlSymmetry"
    >

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_main_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:rotation="180"
            android:tint="@color/colorGreen"
            app:srcCompat="@drawable/ic_arrow"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/tv_main_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp"
            tools:text="2020/06/25" />

        <ImageView
            android:id="@+id/iv_main_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tint="@color/colorGreen"
            app:srcCompat="@drawable/ic_arrow" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/pb_main_points"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/style_circle_progressbar"
            android:indeterminate="false"
            android:max="100"
            android:progressDrawable="@drawable/style_progress_drawable"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="136dp" />

        <TextView
            android:id="@+id/tv_main_pointsInPb"
            android:layout_width="62dp"
            android:layout_height="29dp"
            android:layout_alignStart="@+id/pb_main_points"
            android:layout_alignLeft="@+id/pb_main_points"
            android:layout_alignTop="@+id/pb_main_points"
            android:layout_alignEnd="@+id/pb_main_points"
            android:layout_alignRight="@+id/pb_main_points"
            android:layout_alignBottom="@+id/pb_main_points"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="38dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="41dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="#00a89b"
            android:textSize="24sp"
            android:textStyle="normal"
            tools:ignore="RtlHardcoded"
            tools:layout_editor_absoluteX="216dp"
            tools:layout_editor_absoluteY="176dp"
            tools:targetApi="jelly_bean"
            tools:text="今日已累計\n60點" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:textSize="32sp"
        android:drawableLeft="@drawable/style_toady_event_drawable"
        android:drawablePadding="8dp"
        android:textColor="@color/colorGreen"
        android:paddingLeft="8dp"
        android:layout_height="wrap_content"
        android:text="@string/toady_activity"
        tools:ignore="RtlHardcoded,RtlSymmetry" />
    <View
        android:layout_width="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_explore_24px"
            android:paddingLeft="8dp"
            android:text="@string/move_distance"
            android:textColor="@color/colorBlue"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/tv_main_moveDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/quantum_yellow"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="300" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorBlue"
            android:gravity="center"
            android:textSize="32sp"
            android:text="@string/km" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_explore_24px"
            android:paddingLeft="8dp"
            android:text="@string/days_point"
            android:textColor="@color/colorBlue"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/tv_main_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/quantum_yellow"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="50" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorBlue"
            android:gravity="center"
            android:textSize="32sp"
            android:text="@string/dot" />
    </LinearLayout>
</LinearLayout>